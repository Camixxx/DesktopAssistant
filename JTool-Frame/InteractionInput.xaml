<controls:MetroWindow x:Class="JTool_Frame.InteractionInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="img/inter.ico"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="InteractionInput" Height="60" Width="450" WindowStartupLocation="CenterScreen" KeyUp="MetroWindow_KeyUp">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox Name="txtSearch" Height="26" Width="400" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
        <Button Name="btnEnter" Content="确定" HorizontalAlignment="Center" VerticalAlignment="Center" Width="40" Grid.Column="1" Height="25" Click="btnEnter_Click"/>

    </Grid>
</controls:MetroWindow>
